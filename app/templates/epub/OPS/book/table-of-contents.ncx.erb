<?xml version='1.0' encoding='utf-8'?>
<ncx xmlns='http://www.daisy.org/z3986/2005/ncx/' version='2005-1'>

  <head>
    <meta name='dtb:depth'          content='2'/>
    <meta name='dtb:totalPageCount' content='0'/>
    <meta name='dtb:maxPageNumber'  content='0'/>
  </head>

  <docTitle>
    <text>Contents</text>
  </docTitle>
  <docAuthor>
    <text><%= @story.author %></text>
  </docAuthor>
  <navMap>
    <% @story.chapters.order(:number).each do |chapter|%>
      <navPoint id="np-<%= chapter.number%>">
        <navLabel><text><%= html_escape(chapter.title) %></text></navLabel>
        <content src="Chapter_<%=chapter.number.to_s.rjust(3, '0')%>.xhtml"/>
      </navPoint>
    <% end %>
  </navMap>
</ncx>
